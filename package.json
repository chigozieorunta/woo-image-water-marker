{
  "name": "woo-image-water-marker",
  "version": "1.0.0",
  "description": "A simple plugin to help you insert water markers into WooCommerce product images.",
  "author": "Chigozie Orunta",
  "homepage": "https://github.com/chigozieorunta/woo-image-water-marker#readme",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "plugin",
    "woocommerce"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chigozieorunta/woo-image-water-marker.git"
  },
  "scripts": {
    "dev": "composer install && npm install",
    "start": "docker-compose up -d",
    "watch": "gulp watch",
    "compile": "gulp compile",
    "lint": "npm-run-all --parallel lint:*",
    "lint:php": "./vendor/bin/phpcs",
    "lint:php:fix": "./vendor/bin/phpcbf",
    "lint:css": "stylelint assets/**/*.css && stylelint assets/**/*.scss",
    "lint:css:fix": "stylelint assets/**/*.css --fix && stylelint assets/**/*.scss --fix"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.58.3",
    "stylelint": "^15.1.0",
    "stylelint-config-standard": "^30.0.1"
  },
  "bugs": {
    "url": "https://github.com/chigozieorunta/woo-image-water-marker/issues"
  }
}
